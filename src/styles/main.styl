  font-size: 24px
  font-weight: 300
  margin-bottom: 24px
  color: #e0e0e0

a
  color: #00f3a5
  text-decoration: none

.avatar
  display: block
  margin: 0 auto
  width: 120px
  height: 120px
  -webkit-border-radius: 120px
  border-radius: 120px
  &--small
    width: 70px
    height: 70px

.gif
  -webkit-background-size: cover
  -moz-background-size: cover
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  color: rgba(255, 255, 255, 0.8)
  &--street-fighter
    background-image: url(../images/gif/street-fighter.gif)
  &--activities
    background-image: url(../images/gif/activities.gif)
  &--monkey
    background-image: url(../images/gif/monkey.gif)
  &--matrix
    background-image: url(../images/gif/matrix.gif)
  &--programming
    background-image: url(../images/gif/programming.gif)
    h1
      position: relative
      top: -2em
  &--resources
    background-image: url(../images/gif/resources.gif)
  &--network
    background-image: url(../images/gif/network.gif)
  &--plugins
    background-image: url(../images/gif/plugins.gif)
    h1
      position: relative
      top: -3em
  &--swag
    background-image: url(../images/gif/swag.gif)
    h1
      position: relative
      top: -2em

